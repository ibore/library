<?xml version="1.0" encoding="utf-8"?>
<me.ibore.widget.TitleBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:layout_rootType="title"
    app:tbStatusBar="true">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_titleBackPress="true"
        app:layout_titleType="title"
        tools:text="标题" />

    <TextView
        android:visibility="gone"
        tools:visibility="gone"
        android:id="@+id/tv_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="1"
        tools:text="副标题"
        android:textSize="12sp"
        app:layout_titleType="subTitle" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:id="@+id/iv_back"
        android:scaleType="center"
        app:layout_titleBackPress="true"
        android:src="@drawable/ic_title_bar_back"
        app:layout_titleType="start" />

</me.ibore.widget.TitleBar>