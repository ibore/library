<?xml version="1.0" encoding="utf-8"?>
<me.ibore.widget.RootLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f4f5f7">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_rootType="content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:text="普通轮滑" />

                <me.ibore.widget.wheel.WheelView
                    android:id="@+id/wheelView"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:wvAutoFitTextSize="true"
                    app:wvDividerColor="@color/dialog_view_line"
                    app:wvDividerHeight="1dp"
                    app:wvLineSpacing="16dp"
                    app:wvShowDivider="true"
                    app:wvTextBoundaryMargin="16dp"
                    app:wvTextSize="18sp"
                    app:wvVisibleItems="5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/Title"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="年份选择" />

                <me.ibore.widget.wheel.YearWheelView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:wvAutoFitTextSize="true"
                    android:background="@color/white"
                    app:wvDividerColor="@color/dialog_view_line"
                    app:wvDividerHeight="1dp"
                    app:wvLineSpacing="16dp"
                    app:wvShowDivider="true"
                    app:wvTextBoundaryMargin="16dp"
                    app:wvTextSize="18sp"
                    app:wvVisibleItems="5" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:text="月份选择" />

                <me.ibore.widget.wheel.MonthWheelView
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:wvAutoFitTextSize="true"
                    app:wvDividerColor="@color/dialog_view_line"
                    app:wvDividerHeight="1dp"
                    app:wvLineSpacing="16dp"
                    app:wvShowDivider="true"
                    app:wvTextBoundaryMargin="16dp"
                    app:wvTextSize="18sp"
                    app:wvVisibleItems="5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/Title"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="日选择" />

                <me.ibore.widget.wheel.DayWheelView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:wvAutoFitTextSize="true"
                    android:background="@color/white"
                    app:wvDividerColor="@color/dialog_view_line"
                    app:wvDividerHeight="1dp"
                    app:wvLineSpacing="16dp"
                    app:wvShowDivider="true"
                    app:wvTextBoundaryMargin="16dp"
                    app:wvTextSize="18sp"
                    app:wvVisibleItems="5" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <me.ibore.widget.TitleBar
        android:id="@+id/title_bar"
        style="@style/TitleBar">

        <include layout="@layout/title_bar" />

    </me.ibore.widget.TitleBar>

</me.ibore.widget.RootLayout>