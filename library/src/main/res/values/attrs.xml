<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RootLayout">
        <attr name="rootShowType">
            <enum name="content" value="2" />
            <enum name="loading" value="4" />
            <enum name="empty" value="5" />
            <enum name="error" value="6" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RootLayout_Layout">
        <attr name="layout_rootType">
            <enum name="none" value="0" />
            <enum name="title" value="1" />
            <enum name="content" value="2" />
            <enum name="bottom" value="3" />
            <enum name="loading" value="4" />
            <enum name="empty" value="5" />
            <enum name="error" value="6" />
        </attr>
    </declare-styleable>

    <!-- 标题视图 -->
    <declare-styleable name="TitleBar">
        <attr name="tbShadowHeight" format="dimension" />
        <attr name="tbShadowBackground" format="reference" />
        <attr name="tbStatusBar" format="boolean" />
        <attr name="tbTitleText" format="string" />
        <attr name="tbSubTitleText" format="string" />
    </declare-styleable>

    <declare-styleable name="TitleBar_Layout">
        <attr name="layout_titleBackPress" format="boolean" />
        <attr name="layout_titleType">
            <enum name="none" value="0" />
            <enum name="title" value="1" />
            <enum name="subTitle" value="2" />
            <enum name="center" value="3" />
            <enum name="start" value="4" />
            <enum name="end" value="5" />
        </attr>
    </declare-styleable>

</resources>