<?xml version="1.0" encoding="utf-8"?>
<me.ibore.widget.SquareConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp">

    <ImageView
        android:id="@+id/iv_picker_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_picker_check"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_picker_check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_picker_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:textColor="@color/image_picker_text_color"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_picker_check"
        app:layout_constraintEnd_toEndOf="@+id/iv_picker_check"
        app:layout_constraintStart_toStartOf="@+id/iv_picker_check"
        app:layout_constraintTop_toTopOf="@+id/iv_picker_check"
        tools:text="1" />


    <ImageView
        android:id="@+id/iv_picker_gif"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_picker_gif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_picker_take_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:text="@string/image_picker_take_photo"
        android:textColor="@color/image_picker_text_color"
        android:textSize="13sp"
        app:drawableTopCompat="@drawable/ic_image_picker_take_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_picker_video_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:textColor="@color/image_picker_text_color"
        android:textSize="12sp"
        app:drawableStartCompat="@drawable/ic_image_picker_video"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="00:00" />

</me.ibore.widget.SquareConstraintLayout>