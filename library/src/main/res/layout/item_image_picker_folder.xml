<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/cl_item"
    android:background="@color/image_picker_bar_color">

    <ImageView
        android:id="@+id/iv_image_picker_folder"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_image_picker_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:maxLength="12"
        android:singleLine="true"
        android:text="@string/image_picker_all_media"
        android:textColor="@color/image_picker_text_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_image_picker_folder"
        app:layout_constraintStart_toEndOf="@id/iv_image_picker_folder"
        app:layout_constraintTop_toTopOf="@id/iv_image_picker_folder" />

    <TextView
        android:id="@+id/tv_image_picker_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:enabled="false"
        android:text="@string/image_picker_num"
        android:textColor="@color/image_picker_text_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_image_picker_folder"
        app:layout_constraintStart_toEndOf="@id/tv_image_picker_folder"
        app:layout_constraintTop_toTopOf="@id/iv_image_picker_folder" />


    <ImageView
        android:id="@+id/iv_image_picker_folder_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="20dp"
        android:src="@drawable/image_picker_folder_check"
        app:layout_constraintBottom_toBottomOf="@id/iv_image_picker_folder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_image_picker_folder" />


    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginStart="10dp"
        android:background="@color/image_picker_line_color"
        app:layout_constraintBottom_toBottomOf="@+id/iv_image_picker_folder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_image_picker_folder" />

</androidx.constraintlayout.widget.ConstraintLayout>