<?xml version="1.0" encoding="utf-8"?>
<me.ibore.widget.SquareConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp">

    <ImageView
        android:id="@+id/iv_picker_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_mask"
        android:layout_width="409dp"
        android:layout_height="408dp"
        android:background="#80000000"
        tools:layout_editor_absoluteY="1dp" />

    <ImageView
        android:id="@+id/iv_picker_check"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_picker_check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_picker_check"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginBottom="1dp"
        android:padding="5dp"
        android:textSize="14sp"
        app:autoSizeMaxTextSize="14sp"
        app:autoSizeMinTextSize="10sp"
        android:gravity="center"
        android:textColor="@color/image_picker_text_color"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/iv_picker_check"
        app:layout_constraintEnd_toEndOf="@+id/iv_picker_check"
        app:layout_constraintStart_toStartOf="@+id/iv_picker_check"
        app:layout_constraintTop_toTopOf="@+id/iv_picker_check"
        tools:text="1" />

    <ImageView
        android:id="@+id/iv_picker_gif"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:scaleType="centerCrop"
        android:src="@drawable/x_image_picker_gif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_picker_take_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:text="@string/image_picker_take_photo"
        android:textColor="@color/image_picker_text_color"
        android:textSize="13sp"
        app:drawableTopCompat="@drawable/x_image_picker_take_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_picker_video_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:textColor="@color/image_picker_text_color"
        android:textSize="12sp"
        app:drawableStartCompat="@drawable/x_image_picker_video"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="00:00" />

</me.ibore.widget.SquareConstraintLayout>